<% provide(:title, @user.name) %>
<h1> <%= @user.name %> </h1>
<div class="row">
    <section class="user_info">
      <h1>
        <span> Email: <%= @user.email %> </span> <br />
        <span> <%= @user.created_at.strftime("Created on %d/%m/%Y") %> </span> <br />
        <span> Time zone: <%= @user.time_zone %> </span> <br /> <br />
        <span> <%= link_to "Edit Profile", edit_user_path(@user.id) %> </span>
      </h1>
    </section>

</div>
